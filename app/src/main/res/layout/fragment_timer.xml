<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.mashjulal.android.cookmeal.fragments.TimerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/pb_frTimer_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:max="100"
        android:paddingBottom="50dp"
        android:progress="100"
        android:progressDrawable="@drawable/circular_big" />

    <TextView
        android:id="@+id/tv_frTimer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:paddingBottom="50dp"
        android:text="12:00:00"
        android:textSize="60dp" />

    <Button
        android:id="@+id/btn_frTimer_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_frTimer_progress"
        android:layout_alignStart="@+id/pb_frTimer_progress"
        android:background="@color/colorAccent"
        android:text="Start" />

    <Button
        android:id="@+id/btn_frTimer_stop"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_frTimer_progress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:background="@color/colorAccent"
        android:text="Stop"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_frTimer_reset"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_frTimer_progress"
        android:layout_alignEnd="@+id/pb_frTimer_progress"
        android:background="@color/colorAccent"
        android:text="Reset"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_frTimer_setTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_frTimer_progress"
        android:layout_alignEnd="@+id/pb_frTimer_progress"
        android:background="@color/colorAccent"
        android:text="Set Time"
        android:visibility="visible" />
</RelativeLayout>
