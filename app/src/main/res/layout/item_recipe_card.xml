<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_iRecipeCard_previewImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/no_photo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_iRecipeCard_recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_iRecipeCard_previewImage"
            android:layout_margin="16dp"
            android:layout_toEndOf="@+id/iv_iRecipeCard_previewImage"
            android:maxLines="3"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_iRecipeCard_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/iv_iRecipeCard_previewImage"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/ic_start_green" />

        <TextView
            android:id="@+id/tv_iRecipeCard_cookTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ib_iRecipeCard_start"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_iRecipeCard_previewImage"
            android:drawableStart="@drawable/ic_timer"
            android:gravity="center" />
    </RelativeLayout>
</android.support.v7.widget.CardView>